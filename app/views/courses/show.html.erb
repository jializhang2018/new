<h2 class="my-3 p-3 bg-primary text-white">Class Schedule
<n>
    <button class="btn btn-success">Add Course</button>
  or <%= link_to "Cancel", "/course/create" %>
  </n>
  </h2>

<div class="row">
  <div class="col-sm-12">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th><button class="btn btn-success">Monday</button>
    <%= link_to "/1" %></th>
          <th><button class="btn btn-success">Tuesday</button>
    <%= link_to "/2" %></th>
          <th><button class="btn btn-success">Wednesday</button>
    <%= link_to "/3" %></th>
          <th><button class="btn btn-success">Thursday</button>
    <%= link_to "/4" %></th>
          <th><button class="btn btn-success">Friday</button>
    <%= link_to "/5" %></th>

        </tr>
      </thead>
      <ul>
       <% course = Course.find_by(day_id: params["day_id"]) %>
            <% course.each do |r| %>
          <li>
            <td><%=r.title %><n><%=r.time %></n></td>
          </li>
        <% end %>
