<% ride_id = params[:ride_id] %>

<h2 class="my-3 p-3 bg-primary text-white">Assign Driver</h2>

<div class="row">
  <div class="col-sm-12">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Name</th><th>Photo</th><th>Assigned</th><th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% for driver in Driver.all.order("created_at desc") %>
          <% if driver.assigned == true %>
            <tr>
              <td><%= driver.name %></td>
              <td><img src="<%= driver.photo_url %>" height="50" width="50"></td>
              <td>Yes</td>
              <td></td>
            </tr>
          <% else %>
            <tr>
              <td><%= driver.name %></td>
              <td><img src="<%= driver.photo_url %>" height="50" width="50"></td>
              <td>No</td>
              <td><%=link_to "Assign", {:controller => "rides", :action => "update", :id => ride_id, :driver_id => driver.id, :name => "assign"}, :method=> :put %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
